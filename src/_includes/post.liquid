---
layout: main
---

{% include "nav.liquid" %}

<p class="text-4xl font-black pt-5 md:pt-30 pb-4 leading-tight">
    {{ title}}
</p>

<div>
    <em>{{ date | date: "%Y-%m-%d" }}</em> &middot; 
    <span>{{ content | readTime }} min read</span>
</div>

<div class="mt-3 pb-10">
  {% for tag in tags %}
    {% if tag != "posts" %}
      <a href="/tags/{{ tag }}">
        <span class="post-tag">{{ tag }}</span>
      </a>
    {% endif %}
  {% endfor %}
  </div>

<div id="post" class="prose prose-invert hover:prose-a:text-blue-500">
  {{ content }}
</div>