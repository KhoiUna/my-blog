---
layout: main
---

<a href="/" class="block w-fit">
    <p class="bg-[#0e3d66] w-fit p-1 text-2xl font-bold mt-5 leading-tight capitalize">{{ site.title }}</p>
    <p class="text-sm italic mt-1 leading-tight">Open-sourcing knowledge</p>
</a>

{% include "nav.liquid" %}

<a class="hover:underline underline-offset-8" href="{{ url }}">
  <p class="text-4xl font-black pt-5 md:pt-30 pb-4 leading-tight">{{ title }}</p>
</a>

<div>
    <em>{{ date | date: "%a, %b %d, %Y" }}</em> &middot; 
    <span>{{ content | readTime }} min read</span>
</div>

<div class="mt-3 pb-10">
  {% for tag in tags %}
    {% if tag != "posts" %}
      <a href="/tags/{{ tag }}">
        <span class="post-tag">{{ tag }}</span>
      </a>
    {% endif %}
  {% endfor %}
  </div>

<div id="post" class="prose prose-invert hover:prose-a:text-blue-500">
  {% if ogImage %}
  <div class="max-w-[500px]">
    <img class="w-full rounded-lg object-scale-down" src="{{ ogImage }}" />
  </div>
  {% endif %}

  {{ content }}
</div>